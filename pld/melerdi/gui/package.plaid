package melerdi.gui;

import melerdi.gui.container.window.*;
import melerdi.gui.container.panel.*;
import melerdi.gui.components.button.*;
import melerdi.gui.layout.*;

method makeWindow(name)
{  
	val win = new Window
	{
		name = name; 		
	} with WindowState
	{
		peer = javax.swing.JFrame.new(name);
	} with Layout;
	
    win.layout();
	win.setupPeer();
	win;
   }
   
method notifyClose() 
{
	java.lang.System.exit(0);
}

method makePanel() 
{
	val p= new Panel { peer = javax.swing.JPanel.new();};
	p.setpanel();
	p;
}

method makeButton(name) 
{
	val b= new Button { peer = javax.swing.JButton.new(name);} with ButtonAction{
	};
	b.setButton();
	b.setAction();
	b;
}

